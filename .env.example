# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/ummid_se_hari?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars-long"

# Email Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="उम्मीद से हरी <noreply@ummidsehari.in>"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# S3 Compatible Storage (MinIO for development)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_PUBLIC="public-assets"
S3_BUCKET_PRIVATE="private-files"
S3_REGION="us-east-1"

# SMS Provider (Choose one)
SMS_PROVIDER="textlocal" # or "twilio"

# TextLocal (India)
TEXTLOCAL_API_KEY="your-textlocal-api-key"
TEXTLOCAL_SENDER="UMMID"

# Twilio (Alternative)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# WhatsApp Cloud API (Optional)
WHATSAPP_TOKEN="your-whatsapp-cloud-api-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# Web Push Notifications
WEB_PUSH_PUBLIC_KEY="your-web-push-public-key"
WEB_PUSH_PRIVATE_KEY="your-web-push-private-key"
WEB_PUSH_EMAIL="mailto:admin@ummidsehari.in"

# Map Configuration
MAP_TILES_URL="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
MAP_ATTRIBUTION="© OpenStreetMap contributors"

# Captcha
HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"
HCAPTCHA_SECRET="your-hcaptcha-secret"

# Analytics (Privacy-friendly)
ANALYTICS_URL="https://your-plausible-instance.com"
ANALYTICS_SITE_ID="ummidsehari.in"

# Feature Flags
FEATURE_FLAGS_ENABLED="true"

# App Settings
NEXT_PUBLIC_APP_NAME="उम्मीद से हरी | Ummid Se Hari"
NEXT_PUBLIC_APP_DESCRIPTION="Smart & Carbon-Free Village PWA for Damday Gram Panchayat"
NEXT_PUBLIC_DEFAULT_LOCALE="hi-IN"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_PWA_INSTALL_PROMPT="true"

# Development
NODE_ENV="development"